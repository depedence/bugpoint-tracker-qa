{
    "name": "bugpoint-tracker-qa",
    "version": "1.3",
    "description": "easter egg",
    "main": "index.js",
    "scripts": {
        "start:backend": "nodemon backend/src/server.ts",
        "start:frontend": "vite --port 4000 frontend",
        "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "prettier": "npx prettier --write .",
        "test": "npx playwright test",
        "test:api": "cd tests/BrunoTests && npx bru run",
        "test:ui": "npx playwright test --ui",
        "test:report": "npx playwright test && allure generate ./allure-results --clean && allure open ./allure-report",
        "allure:generate": "allure generate ./allure-results --clean",
        "allure:open": "allure open ./allure-report"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/depedence/bugpoint-tracker-qa.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/depedence/bugpoint-tracker-qa/issues"
    },
    "homepage": "https://github.com/depedence/bugpoint-tracker-qa#readme",
    "devDependencies": {
        "@playwright/test": "^1.53.2",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.0.4",
        "@types/uuid": "^10.0.0",
        "@usebruno/cli": "^2.9.1",
        "allure-commandline": "^2.34.1",
        "allure-playwright": "^3.3.3",
        "concurrently": "^9.2.0",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "morgan": "^1.10.1",
        "uuid": "^11.1.0",
        "vite": "^6.3.5"
    }
}
